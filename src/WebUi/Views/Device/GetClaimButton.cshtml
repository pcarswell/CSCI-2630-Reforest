@model EDeviceClaims.WebUi.Models.DeviceViewModel

@if (Model.ShowViewClaimButton())
{
    @Html.ActionLink("View Claim", "Edit", "Claim", routeValues: new { id = Model.MostCurrentClaim.Id }, htmlAttributes: new { @class = "btn btn-warning btn-sm" })
}
else
{
    @Html.ActionLink("Submit a Claim", "Start", "Claim", routeValues: new { id = Model.PolicyId }, htmlAttributes: new { @class = "btn btn-danger btn-sm" })
}
