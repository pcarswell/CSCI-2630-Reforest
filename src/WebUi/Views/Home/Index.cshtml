@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h2>E-Device Claims - Insurance for your Devices</h2>
   <!--Begin carousel-->
     <div id="carousel-edevices" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#carousel-edevices" data-slide-to="0" class="active"></li>
            <li data-target="#carousel-edevices" data-slide-to="1"></li>
            <li data-target="#carousel-edevices" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="http://www.utahsportshalloffame.org/phones.png" alt="Cell Phones" width="1200"/>
                
            </div>
            <div class="item">
                <img src="http://www.utahsportshalloffame.org/tablets.png" alt="Tablets" width="1200"/>
                
            </div>
            <div class="item">
                <img src="http://www.utahsportshalloffame.org/personal-devices.png" alt="Personal Devices" width="1200"/>
                
            </div>
          </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-edevices" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel-edevices" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
<!--end carousel-->
 </div>

<div class="row">
    <div class="col-md-8">
        <h2>Device Protection</h2>
        <p>
            Ensure your devices are protected with an E-Device Insurance Policy. For as little as $0.50 a month, you can ensure that any damage or theft to your phone, tablet, or other device is back in working order at little to no cost. 
        </p>
        <p><a href="/about">Learn more &raquo;</a></p>
    </div>
    
    <div class="col-md-4">
        <h2>Claim Management</h2>
        <p>Manage your device, file a claim, chech your policy by logging into your account here.</p>
        <p>@Html.ActionLink("Log in >>", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</p>
    </div>
</div>